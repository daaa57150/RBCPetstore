<groups xmlns="http://www.isdc.ro/wro">
    
    <!-- assets -->
    <group name="assets">
        
        <!-- CSS -->
<!--         <css>webjar:bootstrap/3.3.7-1/less/bootstrap.less</css> -->
        <css>webjar:toastr/2.1.2/toastr.less</css>
        
        <!-- JS -->
        <js>webjar:jquery/1.11.1/jquery.min.js</js>
        <js>webjar:bootstrap/3.3.7-1/js/bootstrap.min.js</js>
        <js>webjar:lodash/4.15.0/lodash.min.js</js>
        <js>webjar:toastr/2.1.2/build/toastr.min.js</js>
        
        <js>webjar:angularjs/1.5.8/angular.min.js</js>
        <js>webjar:angular-route/1.5.8/angular-route.min.js</js>
        <js>webjar:angular-animate/1.5.8/angular-animate.min.js</js>
        <js>webjar:angular-ui-bootstrap/1.3.3/ui-bootstrap.min.js</js>
        <js>webjar:angular-ui-bootstrap/1.3.3/ui-bootstrap-tpls.min.js</js>
        
    </group>
        
    <!-- application -->
    <group name="app">
        <!-- import assets -->
        <group-ref>assets</group-ref>
        
        <!-- the app's css -->
        <css>file:@project.basedir@/src/main/resources/less/app.less</css>
        
        <!-- the app's js files -->
        <js>file:@project.basedir@/src/main/resources/public/js/app.js</js>
        <js>file:@project.basedir@/src/main/resources/public/js/controllers/**.js</js>
        <js>file:@project.basedir@/src/main/resources/public/js/services/**.js</js>
    </group>
</groups>


